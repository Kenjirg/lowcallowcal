<section class="section">
	<div class="container">
		<h1 class="title is-4">提案</h1>		
		<div class="columns">
			<div class="column is-5">
				<div class="box">
					<%= form_for @purchase do |f| %>
						<div class="field">
							<%= f.label :time_period, '時段', class:'label' %>
							<div class="control">
								<span class="select">
									<%= f.select :time_period, ['早','午','晚'] %>
								</span>
							</div>
						</div>
						<div class="field">
							<%= f.label :store_id, '店家名稱', class:'label' %>
							<div class="control">
								<span class="select">
									<%= f.collection_select :store_id, Store.all, :id, :name %>
								</span>
							</div>
						</div>
						<div class="field">
							<%= f.label :end_time, '截止時間', class:'label' %>
							<div class="control">
								<%= f.datetime_select :end_time %>
							</div>
						</div>
						<div class="field">
							<%= f.submit '確定', class:'button is-primary' %>							
						</div>
					<% end %>
				</div>
			</div>
		</div>
		<div class="field">
			<%= link_to '查看所有提案',purchases_path,class:'button is-primary' %>
		</div>
	</div>
</section>